  width: 600rpx;
  height: 1036rpx;
} */
.canvas-hide{
  position: absolute;
  top: 20000rpx;
  left: 0;
  width:0px;
  height:0px;
  overflow:hidden;
}
.create-card{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
}
.create-card>view{
  margin: 16rpx auto;
}
