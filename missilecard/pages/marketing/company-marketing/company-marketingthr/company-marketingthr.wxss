/* pages/marketing/company-marketing/company-marketingthr/company-marketingthr.wxss */

page {
  background: #000;
  width: 100%;
}

.company-header {
  width: 100%;
  height: 564rpx;
  position: relative;
}

.company-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 410rpx;
  color: #ffc575;
  margin-bottom: 155rpx;
}

.company-info view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.company-info > text {
  font-size: 40rpx;
}

.name {
  font-size: 38rpx;
}

.position {
  font-size: 28rpx;
}

.phone {
  font-size: 42rpx;
}

.company-introduct {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 26rpx;
  color: #ffc575;
  margin-bottom: 90rpx;
}

.introcucts {
  width: 240rpx;
  height: 66rpx;
  background: #ffc575;
  border: 40rpx;
  text-align: center;
  border-radius: 15rpx;
}

.company-images {
  width: 600rpx;
  height: 450rpx;
}

.company-images .swipers, .company-images .swiper image {
  width: 100%;
  height: 100%;
}

.introtext {
  padding-top: 43rpx;
}

.company-introduct > view > text {
  line-height: 66rpx;
  color: #111;
  font-size: 38rpx;
}

.company-introduct > text {
  width: 600rpx;
  margin: 0 auto;
  line-height: 45rpx;
  text-indent:40rpx;
}

.company-show {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 620rpx;
  font-size: 38rpx;
  color: #111;
  margin-bottom: 96rpx;
}

.company-shows {
  width: 240rpx;
  height: 66rpx;
  background: #ffc575;
  border: 40rpx;
  text-align: center;
  border-radius: 15rpx;
}

.company-shows text {
  line-height: 66rpx;
  color: #111;
  font-size: 38rpx;
}

.company-image {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 652rpx;
  height: 502rpx;
  border: 1px dashed #e3c190;
}

.topleft image, .topright image, .buttomleft image, .buttomright image {
  width: 100%;
  height: 100%;
}

.topleft {
  position: absolute;
  top: -1px;
  left: -1px;
  width: 48rpx;
  height: 48rpx;
  transform: rotate(270deg);
}

.topright {
  position: absolute;
  top: -1px;
  right: -1px;
  width: 48rpx;
  height: 48rpx;
}

.buttomleft {
  position: absolute;
  bottom: -1px;
  left: -1px;
  width: 48rpx;
  height: 48rpx;
  transform: rotate(180deg);
}

.buttomright {
  position: absolute;
  bottom: -1px;
  right: -1px;
  width: 48rpx;
  height: 48rpx;
  transform: rotate(90deg);
}

.company-aim {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 385rpx;
  font-size: 38rpx;
  color: #111;
  margin-bottom: 98rpx;
}

.company-aimtext {
  width: 240rpx;
  height: 66rpx;
  background: #ffc575;
  border: 40rpx;
  text-align: center;
  border-radius: 15rpx;
}

.company-aimtext text {
  line-height: 66rpx;
  color: #111;
  font-size: 38rpx;
}

.company-aimimage {
  width: 654rpx;
  height: 254rpx;
}

.company-aimimage image {
  width: 100%;
  height: 100%;
}

.company-message {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 38rpx;
  color: #111;
  margin-bottom: 40rpx;
}

.company-messagetext {
  width: 240rpx;
  height: 66rpx;
  background: #ffc575;
  border: 40rpx;
  text-align: center;
  border-radius: 15rpx;
}

.company-messagetext text {
  line-height: 66rpx;
  color: #111;
  font-size: 38rpx;
}

.company-infos {
  padding-left: 50rpx;
}

.company-infosleft {
  display: flex;
  flex-direction: column;
  float: left;
  width: 22%;
  height: 100%;
  font-size: 28rpx;
  color: #ffc575;
  margin-top: 35rpx;
}

.company-infosleft > text, .company-infosright > text {
  margin-bottom: 18rpx;
}

.company-infosright {
  display: flex;
  flex-direction: column;
  float: right;
  padding-right: 40rpx;
  box-sizing: border-box;
  width: 78%;
  height: 100%;
  font-size: 28rpx;
  color: #ffc575;
  margin-top: 35rpx;
}

.company-addr {
  margin-top: 36rpx;
}

.company-sharecontainer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 120rpx;
}

.company-share {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 120rpx;
  margin: 0 auto;
}

.company-share view {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #66a6ff;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border-radius: 50rpx;
}
.company-share button {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #66a6ff;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border-radius: 50rpx;
}

.header-image {
  width: 750rpx;
  height: 692rpx;
  position: absolute;
  top: -50rpx;
}

.company-title {
  width: 447rpx;
  height: 13rpx;
  margin-bottom: 50rpx;
}

.company-title image {
  width: 100%;
  height: 100%;
}

.itemcontainer {
  padding: 0 30rpx 45rpx 50rpx;
  padding-bottom: 120rpx;
}

.itemtext {
  display: flex;
  line-height: 1.8;
}

.lefttext {
  color: #ffc575;
  font-size: 28rpx;
  width: 160rpx;
}

.righttext {
  color: #ffc575;
  font-size: 28rpx;
  flex: 1;
}

.arrowl image, .arrowr image {
  width: 100%;
  height: 100%;
}

.arrowl, .arrowr {
  width: 170rpx;
  height: 40rpx;
}

.arrowl {
  position: absolute;
  left: 55rpx;
  top: 15rpx;
}

.arrowr {
  position: absolute;
  right: 55rpx;
  top: 15rpx;
  transform: rotate(180deg);
}

.circle {
  position: absolute;
  width: 240rpx;
  height: 240rpx;
  top: 170rpx;
  left: 50%;
  margin-left: -120rpx;
  border-radius: 50%;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
}

