.company-info {
  width: 100%;
  height: 435rpx;
}

.compamy-infoleft {
  float: left;
  width: 50%;
  height: 435rpx;
  background: #333;
}

.compamy-inforight {
  float: right;
  width: 50%;
  height: 435rpx;
  background: #d14d44;
}

.company-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 58rpx;
  width: 100%;
  height: 435rpx;
  color: #fff;
  font-size: 38rpx;
}

.company-message > text:nth-of-type(1) {
  font-size: 32rpx;
}

.company-message > text:nth-of-type(2) {
  margin-top: 65rpx;
  font-size: 38rpx;
}

.company-message > text:nth-of-type(3) {
  font-size: 28rpx;
}

.company-message > text:nth-of-type(4) {
  margin-top: 40rpx;
}

.company-profile {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 650rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}

.company-profile > view, .company-style > view, .company-styleinfos,
.company-infos > view {
  display: flex;
  flex-direction: column;
}

.company-profile > view > text:first-child,
.company-style > view > text:first-child,
.company-styleinfo > view > text:first-child,
.company-infos > view > text:first-child,
.company-styleinfo > view > text:first-child {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.company-show {
  font-size: 36rpx;
  line-height: 50rpx;
  width: 145rpx;
  border-top: 4rpx solid #d24d44;
}

.company-profile, .company-style, .company-styleinfo, .company-infos,
.company-styleinfo {
  position: relative;
}

.company-profile > view:last-child {
  line-height: 48rpx;
  font-size: 26rpx;
}

.company-style {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 650rpx;
  height: 600rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}

.company-image {
  width: 597rpx;
  height: 450rpx;
  background: #f0f0f0;
  margin: 0 auto;
}

.company-styleinfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 650rpx;
  height: 390rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}

.company-circle {
  width: 653rpx;
  height: 253rpx;
  margin: 0 auto;
}

.company-infos {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 675rpx;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  margin-bottom: 47rpx;
}

.company-content {
  width: 675rpx;
  height: 525rpx;
  margin: 0 auto;
  color: #111;
  margin-bottom: 48rpx;
}

.company-infosleft {
  display: flex;
  flex-direction: column;
  float: left;
  width: 22%;
  height: 100%;
  font-size: 28rpx;
}

.company-infosleft > text, .company-infosright > text {
  margin-bottom: 18rpx;
}

.company-infosright {
  display: flex;
  flex-direction: column;
  float: right;
  padding-right: 40rpx;
  box-sizing: border-box;
  width: 78%;
  height: 100%;
  font-size: 28rpx;
}

.company-sharecontainer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
}

.company-share {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 120rpx;
  margin: 0 auto;
}

.company-share view {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #66a6ff;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border-radius: 50rpx;
}
.company-share button {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #66a6ff;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border-radius: 50rpx;
}

.addright {
  width: 165rpx;
  height: 88rpx;
  position: absolute;
  right: -75rpx;
  top: 0;
  transform: skew(-30deg);
  background: #d24d44;
}

.left {
  float: left;
  width: 110rpx;
  height: 88rpx;
  background: #d24d44;
  overflow: hidden;
}

.right {
  float: right;
  width: 55rpx;
  height: 88rpx;
  background: #333;
  overflow: hidden;
}

.company-circle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.square {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 175rpx;
  height: 175rpx;
  border: 4rpx solid #111;
  transform: rotate(45deg);
}

.squareinner {
  width: 150rpx;
  height: 150rpx;
  border: 4rpx solid #d24d44;
}

.square .squareinner text {
  transform: rotate(45deg);
}

.first {
  position: relative;
  left: 21rpx;
}

.three {
  position: relative;
  right: 21rpx;
}

.fix {
  position: absolute;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-around;
}

.icon {
  width: 447rpx;
  height: 13rpx;
}

.icon image {
  width: 100%;
  height: 100%;
}

.toleft {
  width: 50rpx;
  height: 117rpx;
  position: absolute;
  left: -35rpx;
  top: 300rpx;
}

.toleft image {
  width: 100%;
  height: 100%;
}

.toright {
  width: 50rpx;
  height: 117rpx;
  position: absolute;
  left: 635rpx;
  top: 300rpx;
  transform:rotate(180deg);
}

.toright image {
  width: 100%;
  height: 100%;
}

.short {
  padding-top: 50rpx;
  font-size: 26rpx;
  color: #111111;
  text-indent:40rpx;
}

.company-image .swipers, .company-image .swipers image {
  width: 100%;
  height: 100%;
}

.itemcontainer {
  padding: 0 45rpx 45rpx 30rpx;
  background: #fff;
  padding-bottom: 120rpx;
  border-bottom: 1px solid #f0f0f0;
}

.itemtext {
  display: flex;
  line-height: 1.8;
}

.lefttext {
  color: #333333;
  font-size: 28rpx;
  width: 160rpx;
}

.righttext {
  color: #333333;
  font-size: 28rpx;
  flex: 1;
}

.edit {
  width: 88rpx;
  height: 88rpx;
