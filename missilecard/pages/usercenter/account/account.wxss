.account-container {
width: 100%;
height: 100%;
background: #fff;
}

.account-header {
width: 690rpx;
height: 120rpx;
margin: 0 auto;
font-size: 24rpx;
}

.account-header > text {
position: relative;
top: 30rpx;
}

.account-space {
width: 100%;
height: 20rpx;
background: #f0f0f0;
}

.account-login {
display: flex;
align-items: center;
width: 100%;
height: 220rpx;
}

.account-have, .account-nohave {
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
width: 50%;
height: 120rpx;
background: #f5f5f5;
font-size: 30rpx;
color: #333;
margin-bottom: 2rpx;
}

.account-active, ._account-active {
background: #66a7fe;
color: #fff;
font-weight: normal;
}

.account-have .account-actives, .account-nohave ._account-actives {
color: #fff;
}

.account-active:before, ._account-active:before {
content: '';
width: 0;
height: 0;
border: 20rpx solid transparent;
border-bottom-color: #fff;
position: absolute;
left: 165rpx;
margin-top: 42rpx;
z-index: 99;
}

._account-active:before {
left: 540rpx;
}

.account-register {
font-size: 20rpx;
color: #8b8b8b;
}

.account-form {
width: 690rpx;
margin: 0 auto;
margin-top: 10rpx;
}

.account-info {
height: 100rpx;
display: flex;
align-items: center;
justify-content: space-between;
border-bottom: 1px solid #f0f0f0;
font-size: 28rpx;
}

.account-text {
width: 168rpx;
}

.account-info input {
flex: 1;
}

.account-text, .account-textlogin, .account-code {
color: #999;
}

.account-btn {
position: absolute;
bottom: 76rpx;
left: 75rpx;
width: 602rpx;
height: 88rpx;
line-height: 88rpx;
background: #66a7fe;
text-align: center;
color: #fff;
border-radius: 50rpx;
font-size: 32rpx;
}

.show {
display: block;
}

.hidden {
display: none;
}

.account-code {
font-size: 28rpx;
width: 160rpx;
display: flex;
align-items: center;
justify-content: flex-end;
border-left: 1px solid #f0f0f0;
background: #fff;
border: 0;
background-color: transparent;
margin: 0;
padding: 0;
outline: none;
}

.account-code::after {
border: none;
}

button[disabled] {
background: #fff !important;
}
