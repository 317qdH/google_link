.object-container {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.object-phone {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  background: #fff;
}

.object-typebox {
  width: 100%;
  background: #fff;
}

.object-type {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 30rpx;
  color: #666;
  font-size: 30rpx;
}

.object-checkout {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #f0f0f0;
  font-size: 28rpx;
  background: #fff;
}

.radio {
  margin-left: 30rpx;
  border: none;
}

.object-describe {
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  font-size: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
  margin-top: 20rpx;
}

.object-describe > text {
  margin-left: 30rpx;
}

.object-textarea {
  width: 100%;
  background: #fff;
}

.object-textarea > textarea {
  width: 690rpx;
  height: 510rpx;
  margin: 0 auto;
  font-size: 27rpx;
  padding-top: 25rpx;
  margin-bottom: 25rpx;
}

.object-detail {
  color: #999;
}

.object-bottom {
  width: 100%;
  height: 150rpx;
  background: #fff;
}

.object-back {
  position: absolute;
  bottom: 30rpx;
  left: 75rpx;
  width: 603rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #66a7fe;
  border-radius: 50rpx;
  color: #fff;
}

