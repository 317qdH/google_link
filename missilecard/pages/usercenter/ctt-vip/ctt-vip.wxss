/* pages/usercenter/ctt-vip/ctt-vip.wxss */

@import '../../../styles/icon.wxss';
page{
  background: #fbf6f0;
}
/*导航栏样式*/
.ico-back{
  width: 36rpx;
  height: 36rpx;
  background-size: 20rpx 34rpx;
  background-repeat: no-repeat;
  background-position: 30rpx center;
}
.hh-header {
  position: fixed;
  top: 0;
  width: 100%;
  /* background-color: #ff911b; */
  z-index: 99;
  background: url('https://img0.912688.com/mc-uc-ctt-nav-bg.jpg') no-repeat;
  background-size: 750rpx 350rpx;
  background-position: 0 0 ;
}
.hh-title{
  font-size: 36rpx;
  text-align: center;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hh-nav-right{
  width: 56px;
}
.hh-nav-back{
  width: 56px;
  display: flex;
  align-items: center;
}

.white-arrow{
  background-image: url('http://img0.912688.com/x2-toback-icon2.png');
}
.black-arrow{
  background-image:url('http://img0.912688.com/x2-toback-icon.png');
}
.indust-font{
  color: #fff;
  font-size: 44rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}


.uc-ctt-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 350rpx;
  z-index: -10;
}
.uc-ctt-header{
  display: flex;
  padding: 40rpx 0 80rpx 50rpx;
}
.uc-ctt-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.uc-ctt-infor{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.uci-username{
  display: flex;
  align-items: center;
  color: #caaa85;
  font-size: 38rpx;
}
.uci-date{
  color: #766f67;
  font-size: 24rpx;
  margin-top: 6rpx;
}
.uci-unvip{
  width: 33rpx;
  height: 35rpx;
  margin-left: 12rpx;
}
.uc-ctt-itmeList{
  position: relative;
  text-align: center;
  margin-top: 80rpx;
  padding-bottom: 60rpx;
}
.uci-title{
  color: #caaa85;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.uci-img{
  width: 699rpx;
  height: 798rpx;
}
.uci-vip-button{
  width: 600rpx;
  height: 88rpx;
  margin: 40rpx auto 0 auto;
  line-height: 88rpx;
  text-align: center;
  color: #caaa85;
  font-size: 32rpx;
  border-radius: 44rpx;
  background: #49443e;
}
.ctt-enjoy-tip{
  position: absolute;
  top: -120rpx;
  left: 30rpx;
  width: 690rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  color: #caaa85;
  font-size: 24rpx;
  text-align: left;
  border-radius: 40rpx;
  background-color: #36322d;
}
.ctt-enjoy-tip-notice{
  width: 32rpx;
  height: 31rpx;
  margin:0 12rpx 0 30rpx;
}