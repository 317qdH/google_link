/* 加号扩展 */

.increased {
  width: 100%;
  /* height: 150rpx; */
  padding: 40rpx 30rpx;
  border-top: 1px solid #d7d5d5;
  background: #f5f5f5;
  /* overflow: hidden; */
}

.increased .image {
  width: 116rpx;
  height: 150rpx;
  text-align: center;
  margin: 0 40rpx 0 20rpx;
}

.image-icon-box {
  width: 116rpx;
  height: 116rpx;
  line-height: 116rpx;
  background: #fff;
  border-radius: 26rpx;
}

.image-icon {
  font-size: 46rpx;
  color: #58595b;
}

.image-text {
  height: 34rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #999;
}

@keyframes slidedown {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

.slidedown {
  animation: slidedown 0.3s linear;
}

.slideup {
  animation: slideup 0.3s linear;
}

@keyframes slideup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}

.myi {
  width: 100%;
  box-sizing: border-box;
  margin-top: 50rpx;
  height: 30rpx;
  text-align: center;
}

.myi view {
  transition: all 0.5s;
  width: 4rpx;
  margin-left: 2rpx;
  margin-right: 2rpx;
  height: 30rpx;
  background-color: #66a6ff;
  float: left;
}

#flag {
  margin-bottom: 100rpx;
  height: 160rpx;
  /* height: 140rpx; */
}

/* 语音转换框 */

.video-btn-box {
  margin-top: 15rpx;
  overflow: hidden;
}

.text-tishi {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.text-change {
  font-size: 30rpx;
  color: #333;
  width: 100%;
  height: 180rpx;
}

.video-btn {
  width: 120rpx;
  height: 70rpx;
  border-radius: 6rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  float: right;
}

.video-none {
  background: #fff;
  color: #999;
}
.video-sub {
  background: #6ba7fb;
  color: #fff;
  margin-left: 20rpx;
}
