/* pages/message/chat/chat.wxsss */
@import '../../../styles/base.wxss';
@import '../../../styles/style.wxss';
page {
  background: #f3f3f3;
  line-height: 1.
}

.top {
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding: 20rpx 0;
  position: fixed;
  /* top: 0; */
  z-index: 2;
}

.card-top {
  width: 50%;
  text-align: center;
  line-height: 40rpx;
  color: #555;
}

.top-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}

.details .top-icon {
  font-size: 32rpx;
}

.top-text {
  font-size: 30rpx;
  vertical-align: middle;
}

/* 聊天 */

.history {
  padding-top: 80rpx;
}

.message-cover {
  position: relative;
}

.msg-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.cover {
  background: transparent;
}

.msg-time {
  font-size: 24rpx;
  color: #b5b5b5;
  text-align: center;
  padding: 20rpx 0;
}

.chat-news {
  width: 100%;
  overflow: hidden;
  padding: 10rpx 0;
}

.chat-news .mine {
  float: right;
}

.chat-news .my_right {
  float: right;
}

/* 对方名字 */

.chat-news .name {
  margin: 0 0 10rpx 10rpx;
  font-size: 18rpx;
  color: #999;
}

.chat-news .you_left {
  float: left;
}

.chat-news .your {
  float: left;
}

.selectImg {
  display: inline-block;
  max-width: 210rpx;
  max-height: 280rpx;
  border-radius: 6rpx;
  margin: 0 10rpx;
}

.my_right .selectImg {
  margin-right: 20rpx;
}

/* 输出图片 */

.new_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

/* 图片加载 */
.load {
  height: 100%;
}
.load .weui-loadmore__tips {
  display: block;
  color: #fff;
}
.img_box {
  position: relative;
}
.rightImg_cover {
  position: absolute;
  width:88%;
  height:95%;
  border-radius: 6rpx;
  margin: 0 10rpx;
  background: rgba(255,255,255 , 0.5);
}

/* 输出文字 */

.new_txt {
  max-width: 510rpx;
  display: inline-block;
  line-height: 50rpx;
  padding: 10rpx 20rpx;
  margin: 0 10rpx;
  word-break:break-all;
}

.new_txt_right {
  border-radius: 12rpx 0rpx 12rpx 12rpx;
  background-color: #66a6ff;
  color: #fff;
}

.new_txt_left {
  border-radius: 0rpx 12rpx 12rpx 12rpx;
  background-color: #fff;
  color: #333;
}

.my_right .new_txt {
  margin-right: 20rpx;
}

/* 底部输入框 */

.msg-bottom {
  width: 100%;
  min-height: 140rpx;
  border-top: 1px solid #d7d5d5;
  background: #f5f5f5;
  position: fixed;
  bottom: 0;
}

.sendMessage {
  padding: 10rpx 30rpx;
}

.input-box {
  background: #fff;
  width: 480rpx;
  min-height: 74rpx;
  border-radius: 6rpx;
}

.msg-input {
  background: #fff;
  width: 460rpx;
  min-height: 34rpx;
  border-radius: 6rpx;
  padding: 18rpx 10rpx;
  /* margin-bottom: 20rpx; */
}

.msg-video {
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx;
  position: relative;
}

.video-top {
  width: 158rpx;
  height: 69rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background: url('data:img/jpg;base64,') no-repeat;
  background-size: 158rpx 69rpx;
  position: absolute;
  top: -80rpx;
  left: -28rpx;
}

.video-bg {
  width: 740rpx;
  height: 400rpx;
  background: url('data:image/png;base64,') no-repeat;
  background-size: 740rpx 400rpx;
  position: absolute;
  top: -390rpx;
  left: -532rpx;
  padding: 50rpx;
}

.video-text {
  width: 100%;
  height: 220rpx;
}

.video-control {
  width: 100%;
  height: 80rpx;
}

.msg-bottom image {
  display: block;
  width: 100%;
  height: 100%;
}

.msg-add {
  width: 50rpx;
  height: 50rpx;
}

