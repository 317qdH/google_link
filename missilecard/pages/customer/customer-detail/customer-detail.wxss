/* 关闭按钮 */

.cancel {
  position: absolute;
  right: 36rpx;
  top: 40rpx;
  width: 32rpx;
  height: 32rpx;
}

.cancel:before, .cancel:after {
  position: absolute;
  left: 15rpx;
  content: ' ';
  height: 24rpx;
  width: 2px;
  background-color: #9b9b9b;
}

.cancel:before {
  transform: rotate(45deg);
}

.cancel:after {
  transform: rotate(-45deg);
}

.bookmarkcontainer .actives {
  background: #f2f7ff;
  border: 1px solid #66a6ff;
  color: #66a6ff;
  box-sizing: border-box;
}

.indexFixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.bookmarkdefault .remark {
  border: none;
}

.largeclose {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  background: transparent;
}

