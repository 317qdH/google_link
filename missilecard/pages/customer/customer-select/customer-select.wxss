.Industry-picker{
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 20;
  -webkit-transition:all 1s linear;
  transition:all .3s linear;
}

.i-pick-main {
  width: 100%;
  height: 100%;
  padding-bottom: 120rpx;
}

.Industry-picker-show{
  opacity: 1;
  bottom: 0;
}
.Industry-picker .i-pick-title{
  width: 100%;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #66a6ff;
  font-size: 16px;
}
.Industry-picker .i-pick-title image{
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  right:30rpx;
  top: 38rpx; 
}
.i-pick-btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  margin: 0 auto;
  height:120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.i-pick-main{
  display: flex;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.i-pick-left{
  width: 350rpx;
}
.i-pick-left .active {
  color: #66a6ff;
  background: #eef5ff;
}
.i-pick-right .addactive {
  color: #66a6ff;
}
.i-pick-left view{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid #e5e5e5;
  color: #555555;
  font-size: 28rpx;
  background-color: #f5f5f5;
}
.i-pick-left-active:hover{
  color: #66a6ff;
  background-color: #eef5ff;
}
.i-pick-right{
  width: 400rpx;
}
.i-pick-right view{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid #e5e5e5;
  color: #555555;
  font-size: 28rpx;
  background-color: #fff;
}
.i-pick-right-active:hover{
  color: #66a6ff;
}
.i-pick-btn .btn {
  width: 332rpx;
  height: 70rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 70rpx;
  background: #66a6ff;
  color: #fff;
  font-size: 32rpx;
}

.i-pick-btn .reset {
  margin-left: 30rpx;
}

.i-pick-btn .comfirm {
  margin-right: 30rpx;
}
