.flexBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.flex1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.search-box {
  display: flex;
  align-items: center;
  position: relative;
  margin: 0 auto;
  width: 100%;
  height: 100rpx;
  background: #f0f0f0;
  box-sizing: border-box;
}

.place-holder {
  height: 66rpx;
  line-height: 66rpx;
  color: #666;
  font-size: 26rpx;
}

.cleancontainer {
  z-index: 99999;
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 90rpx;
  top: 50%;
  margin-top: -30rpx;
  background: transparent;
}

.clean {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 110rpx;
  top: 50%;
  margin-top: -15rpx;
}

.search-input-box {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  width: 570rpx;
  height: 66rpx;
  line-height: 100rpx;
  border: 2rpx solid #f0f0f2;
  border-radius: 58rpx;
  background: #fff;
  padding-left: 54rpx;
  background: #fff url('http://img0.912688.com/mc-search.png') no-repeat;
  background-position: 21rpx 20rpx;
  background-size: 30rpx 128rpx;
}

.search-input {
  font-size: 26rpx;
  color: #666;
  width: 520rpx;
  height: 66rpx;
  line-height: 66rpx;
  padding-left: 12rpx;
}

.search-close {
  width: 30rpx;
  height: 30rpx;
  background: url('http://img0.912688.com/xcx-close.png') no-repeat;
  background-size: 30rpx 30rpx;
  position: absolute;
  top: 50%;
  margin-top: -16rpx;
  right: 20rpx;
}

.search-btn {
  position: absolute;
  top: 50%;
  margin-top: -29rpx;
  right: 20rpx;
  font-size: 30rpx;
  height: 58rpx;
  line-height: 58rpx;
  color: #333;
  text-align: center;
}

.confirm {
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.cancel {
  font-size: 24rpx;
  color: #66a6ff;
}

