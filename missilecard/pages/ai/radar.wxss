.uc-message-box{
  padding: 0 0 0 30rpx;
  background: #fff;
}
.uc-message-item{
  height: 140rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
}
.ucmi-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 14rpx;
  margin-right: 20rpx;
}
.ucm-content{
  flex: 1;
}
.ucmc-text{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}
.ucmc-title{
  margin: -4rpx 0 6rpx 0;
  color: #333333;
  font-size: 30rpx;
}
.ucmc-time{
  color: #999999;
  font-size: 24rpx;
}
.ucmc-tip{
  color: #999999;
  font-size: 26rpx;
}
.ucmc-message{
  color: #66a6ff;
}
.has-to-bottom{
  height: 124rpx;
  line-height: 124rpx;
  text-align: center;
  color: #b5b5b5;
  font-size: 26rpx;
  background: #f7f7f7;
}
/*等待中*/
.tc{
  text-align: center;
}
.weui-loading {
  margin: 40rpx 0;
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: a 1s steps(12) infinite;
  animation: a 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}