page{
  background: #f7f7f7;
}
.radar-card-information{
  height: 232rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background:linear-gradient(to bottom,#66a6ff 60%,#7edef4);
}
.rci-left{
  display: flex;
}
.rci-avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 28rpx;
}
.rci-companyname{
  color: #fff;
  font-size: 38rpx;
  margin-bottom: 8rpx;
}
.rci-post{
  color: #fff;
  font-size: 26rpx;
  margin-bottom: 22rpx;
}
.rci-phone{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 26rpx;
}
.rci-edit{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}
.rci-phone .indust-icon{
  font-size: 24rpx;
}
.rci-edit .indust-icon{
  margin-left: 10rpx;
  font-size: 22rpx;
}
