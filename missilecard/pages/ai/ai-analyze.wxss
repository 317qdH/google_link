/*带边框的三角形*/
.valt-right{
    position:relative;
}
.valt-right .popup{
    width:180rpx;
    height: 120rpx;
    padding-top: 16rpx;
    background:#f9f9f9; 
    color:#333;  
    border-radius:2rpx;
    position:absolute; 
    top:70rpx; 
    left:0;
    border:1rpx solid #cccccc;
    opacity:0; 
    /* animation:hide 0.2s ease-out; */
}
.valt-right .popup-act{
  opacity:1;
  animation: show 0.2s ease-out;
}
.valt-right .popup .triangle-center{
    display:block; 
    width:0; 
    height:0; 
    border-width:0 12rpx 12rpx 12rpx; 
    border-style:solid; 
    border-color:transparent transparent #cccccc; 
    position:absolute; 
    top:-12rpx; 
    left:50%;/* 三角形居中显示 */
    margin-left:-12rpx;/* 三角形居中显示 */
}
.valt-right .popup .triangle-top{
    display:block; 
    width:0; 
    height:0; 
    border-width:0 12rpx 12rpx 12rpx; 
    border-style:solid; 
    border-color:transparent transparent #f9f9f9; 
    position:absolute; 
    top:2rpx; 
    left:-12rpx;
}
