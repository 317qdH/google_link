/*数据总览*/
.ai-statis-title{
  color: #333333;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 44rpx;
}
.ai-statis-tip{
  display: inline-block;
  margin-left: 22rpx;
  color: #999999;
  font-size: 26rpx;
  font-weight: normal;
}
.ai-statis-list{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
}
.ai-statis-item{
  width: 198rpx;
  height: 174rpx;
  border-bottom: 1rpx solid #e5e5e5;
  border-right: 1rpx solid #e5e5e5;
}
.ai-item-title{
  padding-top: 30rpx;
  color: #66a6ff;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.ai-statis-item:nth-child(-n+3){
  height: 144rpx;
}
.ai-statis-item:nth-child(-n+3) .ai-item-title{
  padding-top: 0;
}
.ai-statis-item:nth-of-type(n){
  padding-right: 20rpx;
}
.ai-statis-item:nth-of-type(3n+2){
  padding:0 34rpx 0 20rpx;
}
.ai-statis-item:nth-of-type(3n){
  border-right: none;
  padding-left: 20rpx;
  padding-right: 0;
}
.ai-statis-item:nth-last-of-type(1){
  border-bottom: none;
  height: 144rpx;
}
.ai-statis-item:nth-last-of-type(2){
  border-bottom: none;
  height: 144rpx;
}
.ai-statis-item:nth-last-of-type(3){
  border-bottom: none;
  height: 144rpx;
}
.ai-item-number{
  color: #333333;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.ai-item-analyze{
  color: #555555;
  font-size: 24rpx;
}
.ai-item-analyze-number,.indust-icon{
  color: #f12c20;
  font-size: 24rpx;
}
.xj-icon{
