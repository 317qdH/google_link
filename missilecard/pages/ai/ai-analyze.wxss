/*客脉*/
.visitor-echart{
  position: relative;
  display: flex;
  align-items: center;
  height: 292rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.visitor-echart-img{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.vei-left{
  position: relative;
  width: 260rpx;
  height: 192rpx;
  z-index: 10;
}
.vei-right{
  height: 192rpx;
  margin-left: -58rpx;
}
.vei-label{
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.vei-label:first-child{
  margin-top: 12rpx;
}
.vei-label:last-child{
  margin-bottom: 0;
}
.vei-label-line{
  width: 240rpx;
  margin-right: 20rpx;
  position: relative;
}
.vei-label-line::before{
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  width: 240rpx;
  height: 1rpx;
  border-top: 1rpx solid #d5d5d5;
  color: #d5d5d5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.vei-label-text{
  font-size: 26rpx;
  color: #333333;
}
.echart-tip-icon{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.echart-tip-content{
  width: 331rpx;
  height: 158rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: left;
  background: #f3f7ff;
  border: 2rpx dashed #bcd2fb;
  position: absolute;
  right: 30rpx;
  top: 70rpx;
}
.etc-text{
  color: #333333;
